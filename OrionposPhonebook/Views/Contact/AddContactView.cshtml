@model OrionposPhonebook.Models.ContactModels.AddContactModel

@{
    ViewData["Title"] = "Telefon Ekleme";
}

@if (ViewData["Error"] != null)
{
    <p>@ViewData["Error"]</p>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @using (Html.BeginForm("AddContactForm", "Contact", FormMethod.Post, new { id = "addContactForm", @class = "border p-4 rounded" }))
            {
                <h1 class="mb-4 text-center">Yeni Kayıt Ekle</h1>

                <div class="mb-3">
                    @Html.LabelFor(model => model.FirstName, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.LastName, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.PhoneNumber, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success" id="submitBtn">Kayıt Ekle</button>
                    <a href="@Url.Action("Index", "Contact")" class="btn btn-secondary">Vazgeç</a>
                </div>
            }
        </div>
    </div>
</div>
